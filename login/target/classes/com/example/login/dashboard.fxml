<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- This is the main application scene you'll navigate to -->
<VBox fx:controller="com.example.login.LoginController"
      alignment="CENTER" spacing="20.0"
      xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/17"
      style="-fx-background-color: #fafafa; -fx-padding: 30;">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText" text="Click the button!"
           style="-fx-font-size: 24px; -fx-text-fill: #333;"/>

    <Button text="Hello!" onAction="#onHelloButtonClick"
            style="-fx-background-color: #00796b; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 25; -fx-background-radius: 8;"/>
</VBox>